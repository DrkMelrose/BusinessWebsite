# PostgreSQL connection string (Neon, Supabase, Railway, etc.)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB?sslmode=require
DATABASE_URL="postgresql://user:password@host:5432/db?sslmode=require"

# Simple admin password for MVP (change it!)
ADMIN_PASSWORD="change-me-please"
# Secret for signing the admin cookie
ADMIN_SECRET="a-very-strong-random-string"

# Resend API key (optional) to send email on new leads
# https://resend.com
RESEND_API_KEY=""
NOTIFY_EMAIL_TO="you@example.com"
NOTIFY_EMAIL_FROM="no-reply@your-domain.com"
